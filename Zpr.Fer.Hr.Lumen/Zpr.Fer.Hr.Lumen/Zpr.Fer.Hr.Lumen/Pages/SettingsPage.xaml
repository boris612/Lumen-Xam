<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zpr.Fer.Hr.Lumen.Pages.SettingsPage">
    <StackLayout Orientation="Vertical" >
        <StackLayout Orientation="Horizontal" Margin="0, 10, 0, 0">
            <Switch x:Name="greenFieldToogle" Toggled="onGreenFieldToggle"/>
            <Label Text="Zazeleni polje ako je postavljeno točno slovo" VerticalTextAlignment="Center"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal" >
            <Switch x:Name="moreLettersToogle" Toggled="onMoreLettersToggle"/>
            <Label Text="Ponudi više slova nego što ih sadrži riječ" VerticalTextAlignment="Center"/>
        </StackLayout>

        <Picker Title="Težina" x:Name="Picker" SelectedIndexChanged="Picker_SelectedIndexChanged"/>

        
    </StackLayout>
</ContentPage>